            </VerticalStackLayout>
            <VerticalStackLayout>
                <ImageButton x:Name="C" Clicked="A_Clicked" Source="dotnet_bot.png" WidthRequest="200" HeightRequest="200"></ImageButton>
                <Label Text="C"></Label>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        <Button Clicked="Button_Clicked" WidthRequest="600" HeightRequest="200" Text="Close"></Button>
    </VerticalStackLayout>
</mct:Popup>
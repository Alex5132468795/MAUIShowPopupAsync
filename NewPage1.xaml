            <VerticalStackLayout>
                <ImageButton x:Name="A" Clicked="A_Clicked" Source="dotnet_bot.png" WidthRequest="200" HeightRequest="200"></ImageButton>
                <Label Text="A"></Label>
            </VerticalStackLayout>
            <VerticalStackLayout>
                <ImageButton x:Name="B" Clicked="A_Clicked" Source="dotnet_bot.png" WidthRequest="200" HeightRequest="200"></ImageButton>
